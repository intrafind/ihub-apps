{
  "name": "ihub-apps",
  "version": "4.2.0",
  "description": "iHub Applications Platform",
  "type": "module",
  "bin": {
    "ihub-apps": "./server/sea-server.cjs"
  },
  "scripts": {
    "// === DEVELOPMENT ===": "",
    "setup:dev": "cp .env.example .env && bun run install:all && echo '\\nâœ… Setup complete! Edit .env with your API keys, then run: bun run dev'",
    "dev": "cross-env NODE_ENV=development concurrently --kill-others-on-fail \"bun run server\" \"sleep 2 && bun run client\"",
    "server": "cd server && bun run server.js",
    "client": "cd client && bun run dev",
    "start": "cd server && bun run server.js",
    "// === INSTALLATION & CLEANUP ===": "",
    "install:all": "bun install && cd client && bun install && cd ../server && bun install",
    "clean": "npm run build:clean && rm -rf node_modules client/node_modules server/node_modules",
    "clean:install": "npm run clean && npm run install:all",
    "// === UTILITIES ===": "",
    "health": "curl -f http://localhost:3000/api/health || echo 'Server not running'",
    "logs": "tail -f server/server.log 2>/dev/null || echo 'No server log found'",
    "// === PRODUCTION BUILDS ===": "",
    "prod:build": "bun run build && bun run build:package",
    "prod:deploy": "bun run prod:build && bun run start:prod",
    "start:prod": "cd dist && bun run server/start-prod.js",
    "// === BUILD STEPS ===": "",
    "build": "bun run build:clean && bun run build:client && bun run docs:build:all && bun run docs:copy:all && bun run build:server && bun run build:config",
    "build:clean": "rimraf dist",
    "build:client": "cd client && bun run build && mkdir -p ../dist/public && cp -r dist/* ../dist/public/",
    "build:server": "mkdir -p dist/server && cp -r server/* dist/server/ && rm -rf dist/server/node_modules",
    "build:shared": "mkdir -p dist/shared && cp -r shared/* dist/shared/",
    "build:config": "cp package.json bun.lockb dist/ && bun run build:dotenv",
    "build:dotenv": "[ -f .env ] && cp .env dist/ || echo 'No .env file found, skipping'",
    "build:package": "cd dist && bun install --production && cd server && bun install --production",
    "build:docker": "bun run build:clean && bun run build:client && bun run docs:build:all && bun run docs:copy:all && bun run build:server && bun run build:shared && bun run build:config && bun run build:package",
    "build:binary": "bun run prod:build && ./build-bun.sh",
    "// === DOCUMENTATION === && npm run docs:build:pdf ": "",
    "docs:build": "bun run docs:update-version && cd docs && mdbook build",
    "docs:build:all": "bun run docs:update-version && bun run docs:build && bun run docs:build:markdown",
    "docs:build:html": "npm run docs:build",
    "docs:build:markdown": "bun run scripts/export-docs-markdown.js",
    "docs:copy": "mkdir -p dist/docs && cp -r docs/book/* dist/docs/",
    "docs:copy:all": "mkdir -p dist/docs dist/exports && cp -r docs/book/html/* dist/docs/ && cp docs/book/pdf/*.pdf dist/exports/ 2>/dev/null || true && cp docs/book/iHub-Apps-Documentation.md dist/exports/ 2>/dev/null || true",
    "docs:clean": "rm -rf docs/book",
    "docs:serve": "cd docs && mdbook serve",
    "docs:update-version": "bun run scripts/update-docs-version.js",
    "version:sync": "bun run scripts/sync-release-version.js",
    "// === DOCKER ===": "",
    "docker:build": "docker build -f docker/Dockerfile -t ihub-apps:latest .",
    "docker:build:dev": "docker build -f docker/Dockerfile --target development -t ihub-apps:dev .",
    "docker:build:prod": "docker build -f docker/Dockerfile --target production -t ihub-apps:prod .",
    "docker:run": "docker run --rm -p 3000:3000 --env-file .env ihub-apps:latest",
    "docker:run:dev": "docker run --rm -p 3000:3000 -p 5173:5173 --env-file .env -v $(pwd):/app ihub-apps:dev",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:up:build": "docker-compose -f docker/docker-compose.yml up -d --build",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:down:volumes": "docker-compose -f docker/docker-compose.yml down -v",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:logs:app": "docker-compose -f docker/docker-compose.yml logs -f ihub-dev",
    "docker:shell": "docker-compose -f docker/docker-compose.yml exec ihub-dev sh",
    "docker:prod:up": "docker-compose -f docker/docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker/docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker/docker-compose.prod.yml logs -f",
    "docker:prod:shell": "docker-compose -f docker/docker-compose.prod.yml exec ihub-app sh",
    "docker:clean": "docker system prune -f && docker volume prune -f",
    "docker:clean:all": "docker system prune -af && docker volume prune -f",
    "// === ELECTRON ===": "",
    "electron:dev": "concurrently \"bun run dev\" \"electron electron/main.js\"",
    "electron:build": "bun run prod:build && electron-builder",
    "// === TESTING ===": "",
    "test:all": "bun test",
    "test:quick": "bun test tests/unit tests/adapters",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:e2e": "playwright test --config tests/config/playwright.config.js",
    "test:api": "bun test tests/integration/api",
    "test:models": "bun test tests/integration/models",
    "test:ui": "bun test tests/unit/client",
    "test:smoke": "bun run test:adapters && bun run health",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "// === LEGACY TESTS ===": "",
    "test:legacy": "bun run test:openai && bun run test:mistral && bun run test:anthropic && bun run test:google",
    "test:adapters": "bun run test:openai && bun run test:mistral && bun run test:anthropic && bun run test:google",
    "test:openai": "bun run server/tests/openaiAdapter.test.js",
    "test:mistral": "bun run server/tests/mistralAdapter.test.js",
    "test:anthropic": "bun run server/tests/anthropicAdapter.test.js",
    "test:google": "bun run server/tests/googleAdapter.test.js",
    "test:tool-calling": "cd server && bun run tests/toolCalling.test.js",
    "test:tool-integration": "cd server && bun run tests/toolCallingIntegration.test.js",
    "test:real-llm": "cd server && bun run tests/real-llm-integration.test.js",
    "test:azure-openai": "cd server && bun run tests/azure-openai-test.js",
    "test:tool-verification": "cd server && bun run tests/tool-call-verification.test.js",
    "test:api-documentation": "cd server && bun run tests/comprehensive-api-documentation.test.js",
    "test:nda": "cd server && bun run tests/nda-risk-analyzer.test.js",
    "test:validate-framework": "./tests/validate-framework.sh",
    "// === CODE QUALITY ===": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint-format:fix": "bun run lint:fix && bun run format:fix",
    "// === SECURITY ===": "",
    "security:audit": "bun run scripts/audit-admin-endpoints.js",
    "security:audit:admin": "bun run scripts/audit-admin-endpoints.js"
  },
  "keywords": [
    "ai",
    "llm",
    "chatbot",
    "applications"
  ],
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "axios": "^1.13.3",
    "dotenv": "^17.2.3",
    "file-saver": "^2.0.5",
    "html-to-image": "^1.11.13",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^3.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.6.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "supertest": "^7.1.3"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "overrides": {
    "glob": "^11.1.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "build": {
    "asar": true,
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "win": {
      "target": "nsis"
    }
  }
}
