# AI Hub Apps - Docker Environment Configuration
# Copy this file to .env and fill in your API keys and configuration

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Directories (used inside container)
CONFIG_DIR=/app/config
DATA_DIR=/app/data
LOG_DIR=/app/logs

# LLM Provider API Keys
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI Configuration
GOOGLE_API_KEY=your-google-ai-api-key-here

# Mistral AI Configuration
MISTRAL_API_KEY=your-mistral-api-key-here

# Azure OpenAI Configuration (if using Azure)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Authentication Configuration
JWT_SECRET=your-very-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=24h

# OAuth Configuration (if using external authentication)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_CALLBACK_URL=http://localhost:3000/auth/callback

# Database Configuration (if using external database)
DATABASE_URL=postgresql://user:password@localhost:5432/aihub
REDIS_URL=redis://localhost:6379

# Security Configuration
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Monitoring and Observability
ENABLE_METRICS=false
METRICS_PORT=9090
SENTRY_DSN=your-sentry-dsn-here

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/app/logs/app.log

# Feature Flags
ENABLE_FILE_UPLOAD=true
ENABLE_IMAGE_UPLOAD=true
ENABLE_ANONYMOUS_ACCESS=true

# Custom Configuration
CUSTOM_BRANDING_NAME=AI Hub Apps
CUSTOM_LOGO_URL=/logo.png
CUSTOM_PRIMARY_COLOR=#3B82F6

# Development/Debug Settings (set to false in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# File Upload Limits
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md

# Session Configuration
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400000

# Clustering (disable in containerized environments)
ENABLE_CLUSTERING=false

# Production Optimizations
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=4