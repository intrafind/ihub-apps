# iHub server URL (no trailing slash)
IHUB_URL=http://localhost:3000

# OAuth client credentials (create via iHub admin UI)
CLIENT_ID=client_your_client_id
CLIENT_SECRET=your_client_secret_here

# This app's URL (must match redirect URI registered in iHub admin)
APP_URL=http://localhost:8080

# Client mode: 'confidential' (server-side, uses client_secret) or 'public' (SPA, PKCE only)
CLIENT_MODE=confidential

# Port to run this example server on
PORT=8080
