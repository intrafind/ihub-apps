# OpenAI API Key
GPT_3_5_TURBO_API_KEY=sk-...
GPT_4_API_KEY=sk-...

# Anthropic API Key
CLAUDE_3_OPUS_API_KEY=sk-ant-...
CLAUDE_3_SONNET_API_KEY=sk-ant-...

# Google API Key - use unified key for both models
GEMINI_API_KEY=AIza...
# (No need for separate keys for different Gemini models)
OPENAI_API_KEY=sk-...

# Microsoft speech Recognition Service
AZURE_SUBSCRIPTION_ID=...

# Server configuration
PORT=3000

# Proxy Configuration (optional)
# Configure HTTP/HTTPS proxy for external service calls
# These can also be configured in the platform.json file under the "proxy" section
#HTTP_PROXY=http://proxy.example.com:8080
#HTTPS_PROXY=http://proxy.example.com:8080
#NO_PROXY=localhost,127.0.0.1,.local

# Authentication Configuration
# JWT Secret for token signing (IMPORTANT: Generate a secure random value for production)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_VALUE

# OpenTelemetry Configuration (optional)
# Uncomment and configure to enable distributed tracing and metrics
#OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
#OTEL_EXPORTER_OTLP_HEADERS=
#OTEL_SERVICE_NAME=ihub-apps
#OTEL_RESOURCE_ATTRIBUTES=deployment.environment=production,service.version=4.2.0
#OTEL_TRACES_SAMPLER=parentbased_traceidratio
#OTEL_TRACES_SAMPLER_ARG=1.0