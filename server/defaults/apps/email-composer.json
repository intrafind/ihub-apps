{
  "id": "email-composer",
  "enabled": false,
  "order": 4,
  "name": {
    "en": "Email Assistant",
    "de": "E-Mail-Assistent"
  },
  "description": {
    "en": "Supports the creation of professional Emails - without access to your data.",
    "de": "Unterstützt bei der Erstellung von professionellen E-Mails – ohne Zugriff auf Ihre Daten."
  },
  "color": "#2563EB",
  "icon": "mail",
  "system": {
    "en": "You are an email writing assistant. Help users write professional, clear, and effective emails for various business and personal contexts. Ensure the tone is appropriate for the intended audience.",
    "de": "Du bist ein Assistent für das Schreiben von E-Mails. Hilf Nutzern, professionelle, klare und effektive E-Mails für verschiedene geschäftliche und persönliche Kontexte zu verfassen. Stelle sicher, dass der Ton für die Zielgruppe geeignet ist."
  },
  "tokenLimit": 4000,
  "preferredModel": "local-vllm-gemma-3-27b",
  "preferredOutputFormat": "markdown",
  "preferredStyle": "professional",
  "preferredTemperature": 0.6,
  "sendChatHistory": false,
  "prompt": {
    "en": "Write a {{type}} email to {{recipient}} regarding {{subject}}. {{tone}} {{additional_instructions}}\n\n{{content}}",
    "de": "Schreibe eine {{type}} E-Mail an {{recipient}} bezüglich {{subject}}. {{tone}} {{additional_instructions}}\n\n{{content}}"
  },
  "settings": {
    "enabled": true,
    "model": {
      "enabled": false
    },
    "temperature": {
      "enabled": false
    },
    "outputFormat": {
      "enabled": false
    },
    "chatHistory": {
      "enabled": false
    },
    "style": {
      "enabled": true
    }
  },
  "allowEmptyContent": true,
  "messagePlaceholder": {
    "en": "Here you can give me additional information about the creation of the mail...",
    "de": "Hier kannst du mir zusätzliche Informationen zur Erstellung der Mail geben..."
  },
  "variables": [
    {
      "name": "type",
      "label": {
        "en": "Email Type",
        "de": "E-Mail-Typ"
      },
      "type": "string",
      "defaultValue": {
        "en": "professional",
        "de": "professionell"
      },
      "required": true,
      "predefinedValues": [
        {
          "label": {
            "en": "Standard",
            "de": "Standard"
          },
          "value": "professional"
        },
        {
          "label": {
            "en": "Follow-up",
            "de": "Nachverfolgung"
          },
          "value": "follow-up"
        },
        {
          "label": {
            "en": "Request",
            "de": "Anfrage"
          },
          "value": "request"
        },
        {
          "label": {
            "en": "Thank you",
            "de": "Danke"
          },
          "value": "thank you"
        },
        {
          "label": {
            "en": "Introduction",
            "de": "Einführung"
          },
          "value": "introduction"
        },
        {
          "label": {
